<!DOCTYPE HTML>
<html lang="en">
    {# head #}
    <head>
        <!--=============== basic  ===============-->
        <meta charset="UTF-8">
        <title>
            {% block title %}Serveat
            {% endblock %}
        </title>
        <meta content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport">
        <meta content="index, follow" name="robots"/>
        <meta content="" name="keywords"/>
        <meta
        content="" name="description"/>

        <!--=============== css  ===============-->
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        <link type="text/css" rel="stylesheet" href="{{ asset('css/reset.css') }}">
        <link type="text/css" rel="stylesheet" href="{{ asset('css/plugins.css') }}">
        <link type="text/css" rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link type="text/css" rel="stylesheet" href="{{ asset('css/color.css') }}">
        <link
        crossorigin="" href="https://unpkg.com/leaflet@1.4.0/dist/leaflet.css" integrity="sha512-puBpdR0798OZvTTbP4A8Ix/l+A4dHDD0DGqYW6RQ+9jxkRFclaxxQb/SJAWZfWAkuyeQUytO7+7N4QKrDh+drA==" rel="stylesheet"/>

        <!--=============== favicons ===============-->
        <link href="images/favicon.ico" rel="shortcut icon">

        <style>
            .msg-notification {
                position: relative;
            }

            .msg-notification .msg-badge {
                font-size: 10px;
                position: absolute;
                top: -5px;
                right: -10px;
                padding: 0 10px;
                border-radius: 50%;
                background-color: red;
                color: white;
            }
        </style>
    </head>
    {# head end #}
    {# body #}
    <body>
        {# main #}
        <div id="main">
            {# header #}
            <header class="main-header dark-header fs-header sticky">
                <div class="header-inner">
                    <div class="logo-holder" style="width:200px;height:60px;">
                        <a href="{{ path('front_home') }}"><img width="200" height="100" src="{{ asset('images/logo.png') }}" alt=""></a>
                    </div>
                    <div class="header-search vis-header-search">
                        <div class="header-search-input-item">
                            <input placeholder="Keywords" type="text" value=""/>
                        </div>
                        <div class="header-search-select-item">
                            <select class="chosen-select" data-placeholder="All Categories">
                                <option>Tout les plats</option>
                                <option>Mexicain</option>
                                <option>Francais</option>
                                <option>Chinois</option>
                                <option>Japonais</option>
                                <option>Indien</option>
                                <option>Antillais</option>
                                <option>Italien</option>
                                <option>Marocain</option>
                            </select>
                        </div>
                        <button class="header-search-button" onclick="window.location.href='{{ path('listing') }}'">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                    <div class="show-search-button">
                        <i class="fa fa-search"></i>
                        <span>Rechercher</span>
                    </div>
                    <a href="{{ path('front_meal_new') }}" class="add-list">
                        Nouveau repas
                        <span>
                            <i class="fa fa-plus"></i>
                        </span>
                    </a>

                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <a href="{{ path('front_logout') }}">
                            <div class="show-reg-form modal-opn">
                                <i class="fa fa-sign-in"></i>
                                Deconnexion
                            </div>
                        </a>
                    {% else %}
                        <a href="{{ path('front_login') }}">
                            <div class="show-reg-form modal-opn">
                                <i class="fa fa-sign-in"></i>Se connecter</div>
                        </a>
                        <a href="{{ path('front_register') }}">
                            <span style="color: white">
                                <button class=" bounce btn btn-primary waves-effect waves-light" type="button">S'inscrire</button>
                            </span>
                        </a>
                    {% endif %}
                    {# nav-button-wrap #}
                    <div class="nav-button-wrap color-bg">
                        <div class="nav-button">
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>
                    </div>
                    {# nav-button-wrap end #}
                    {# navigation #}
                    <div class="nav-holder main-menu">
                        <nav>
                            <ul>
                                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                    <li>
                                        <a href="{{ path('user_profile') }}"><img src="{{ asset(app.user.avatar) }}" alt="image profile" class="image--cover" style="float: right; width:50px;height: 50px;border-radius: 50%;margin: -5px;object-fit: cover;object-position: center right;"/></a>
                                        {# second level #}
                                        <ul>
                                            {# announcement #}
                                            <h3>Annonces</h3>
                                            <li>
                                                <a href="{{ path('front_meal_index') }}">
                                                    <i class="fa fa-th-list"></i>Mes repas</a>
                                            </li>
                                            <li>
                                                <a href="{{ path('front_meal_all') }}">
                                                    <i class="fa fa-th-list"></i>Tous les repas</a>
                                            </li>
                                            <li>
                                                <a href="{{ path('front_booking_index') }}">
                                                    <i class="fa fa-calendar-check-o"></i>Réservations</a>
                                            </li>
                                            <li>
                                                <a href="{{ path('front_notation_user_notations') }}">
                                                    <i class="fa fa-comments-o"></i>
                                                    Commentaires
                                                </a>
                                            </li>
                                            {# parameters #}
                                            <h3>Paramètres</h3>
                                            <li>
                                                <a href="{{ path('front_user_edit', {'id': app.user.id}) }}" class="user-profile-act">
                                                    <i class="fa fa-user-o"></i>
                                                    Modifier Profil</a>
                                            </li>
                                            <li>
                                                <a href="{{ path('messages') }}">
                                                    <i class="fa fa-envelope-o"></i>
                                                    Messages
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#"><i class="fa fa-unlock-alt"></i>Changer le Mot de Passe</a>
                                            </li>
                                        </ul>
                                        {# second level end #}
                                    </li>
                                {% else %}
                                    <li>
                                        <a href="#">Devenir Hôte
                                            <i class="fa fa-caret-down"></i>
                                        </a>
                                        {# second level #}
                                        <ul style="width: 500px">
                                            <li style="margin-bottom: 20px;">
                                                <a href="listing.html">LOGEMENT-RESTAURANT</a>
                                                <a href="listing2.html">Publier votre annonce</a>
                                                <div style=";text-align: :left;word-wrap: break-word;width: 200px;margin: 90px 0px 25px 0px;">
                                                    <span style="color: #7d93b2">Faîtes découvrir votre patrimoine culturel en invitant des touristes à manger chez vous.</span>
                                                </div>
                                                <a href="listing2.html">En savoir plus sur l'accueil de voyageurs dans votre logement.</a>

                                            </li>
                                        </ul>
                                        {# second level end #}
                                    </li>
                                    <li>
                                        <a href="{{ path('concept') }}">Concept</a>
                                    </li>
                                {% endif %}
                            </ul>
                        </nav>
                    </div>
                    <!-- navigation  end -->
                </div>
            </header>
            {# header end #}
            {# wrapper #}
            <div id="wrapper">
                <div class="content">
                    {% block sidebar %}
                        {% if app.user %}{% endif %}
                    {% endblock %}

                    {% block body %}{% endblock %}
                </div>
            </div>
            {# wrapper end #}
            {# footer #}
            <footer class="main-footer dark-footer">
                <div class="container">
                    <div class="row">
                        <div class="col-md-3">
                            <img width="200" height="100" src="{{ asset('images/logo.png') }}" alt="">
                        </div>
                        {# about #}
                        <div class="col-md-3">
                            <div class="footer-widget fl-wrap">
