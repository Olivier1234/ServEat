{% extends 'base.html.twig' %}

{% block title %}Notation{% endblock %}

{% block body %}
    <h1>Notation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ notation.id }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ notation.rating }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ notation.comment }}</td>
            </tr>
            <tr>
                <th>IsAnonymous</th>
                <td>{{ notation.isAnonymous ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsVisible</th>
                <td>{{ notation.isVisible ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('front_notation_index') }}">back to list</a>

    <a href="{{ path('front_notation_edit', {'id': notation.id}) }}">edit</a>

    {{ include('front/notation/_delete_form.html.twig') }}
{% endblock %}
