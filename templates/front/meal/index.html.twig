{% extends 'base.html.twig' %}


{% block body %}
                    <!--section -->
                    <section id="sec1">
                        <!-- container -->
                        <div class="container">
                            <!-- profile-edit-wrap -->
                            <div class="profile-edit-wrap">
                                <div class="profile-edit-page-header">
                                    <h2>Mes Repas</h2>
                                    <div class="breadcrumbs"><a href="#">Home</a><a href="#">Administration</a><span>Repas</span></div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        {% include 'partials/leftPanel.html.twig' %}
                                    </div>
                                    <div class="col-md-9">
                                        <div class="dashboard-list-box fl-wrap">

                                            <div class="reviews-comments-wrap">
                                                <!-- reviews-comments-item -->
                                                {% for meal in meals %}
                                                <div class="reviews-comments-item">
                                                    <div class="review-comments-avatar">
                                                        <a href="{{ path('front_meal_show', {'id': meal.id}) }}"><img src="{{ asset('images/all/italian1.jpg') }}" alt=""></a>
                                                    </div>
                                                    <div class="reviews-comments-item-text">
                                                        <h4><a href="{{ path('front_meal_show', {'id': meal.id}) }}" class="reviews-comments-item-link">{{ meal.title }}</a></h4>
                                                        <div class="listing-rating card-popup-rainingvis">{{ meal.price }}â‚¬ / personne</div>
                                                        <div class="clearfix"></div>
                                                        <p>{{ meal.description }}</p>
                                                        <span class="reviews-comments-item-date"><i class="fa fa-calendar-check-o"></i>{{ meal.dateMeal ? meal.dateMeal|date('Y-m-d H:i:s') : '' }}</span>
                                                    </div>
                                                </div>
                                                {% else %}
                                                    <tr>
                                                        <td colspan="7">no records found</td>
                                                    </tr>
                                                {% endfor %}
                                                <!--reviews-comments-item end-->
                                            </div>
                                        </div>
                                        <!-- pagination-->
                                        <div class="pagination">
                                            <a href="#" class="prevposts-link"><i class="fa fa-caret-left"></i></a>
                                            <a href="#">1</a>
                                            <a href="#" class="current-page">2</a>
                                            <a href="#">3</a>
                                            <a href="#">4</a>
                                            <a href="#" class="nextposts-link"><i class="fa fa-caret-right"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--profile-edit-wrap end -->
                        </div>
                        <!--container end -->
                    </section>
                    <!-- section end -->
                    <div class="limit-box fl-wrap"></div>
                    <!--section -->
                    <section class="gradient-bg">
                        <div class="cirle-bg">
                            <div class="bg" data-bg="images/bg/circle.png"></div>
                        </div>
                    </section>
                    <!-- section end -->
            <a class="to-top"><i class="fa fa-angle-up"></i></a>


    <h1>Meal index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>DateMeal</th>
                <th>MaxTraveller</th>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for meal in meals %}
            <tr>
                <td>{{ meal.title }}</td>
                <td>{{ meal.description }}</td>
                <td>{{ meal.price }}</td>
                <td>{{ meal.dateMeal ? meal.dateMeal|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ meal.maxTraveller }}</td>
                <td>{{ meal.id }}</td>
                <td>
                    <a href="{{ path('front_meal_show', {'id': meal.id}) }}">show</a>
                    <a href="{{ path('front_meal_edit', {'id': meal.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('front_meal_new') }}">Create new</a>
{% endblock %}
